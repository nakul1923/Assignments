<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5 bg-dark text-white">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-warning">List of Users</h1>
    <a href="/giveadd" class="btn btn-warning">Add New User</a>
  </div>

  <table class="table table-bordered text-white">
    <thead class="bg-secondary">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% result.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.position %></td>
        <td><%= user.salary %></td>
        <td>
          <a href="/giveedit/<%= user.id %>" class="btn btn-warning btn-sm me-2">Edit</a>
          <a href="/delete/<%= user.id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>